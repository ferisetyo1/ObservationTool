<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#f0f0f0"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tipe_kegiatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tipe Kegiatan"
        android:textColor="@color/colorSkyBlue1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/judul_catatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Event"
        android:textColor="@color/colorSkyBlue2"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tipe_kegiatan"
        app:layout_constraintTop_toBottomOf="@+id/tipe_kegiatan" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textColor="@color/colorSkyBlue2"
        app:layout_constraintStart_toStartOf="@+id/judul_catatan"
        app:layout_constraintTop_toBottomOf="@+id/judul_catatan" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/colorSkyBlue2"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/judul_catatan"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipe_kegiatan" />

    <ImageButton
        android:id="@+id/btn_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/judul_catatan"
        app:layout_constraintTop_toBottomOf="@+id/tipe_kegiatan"
        app:srcCompat="@drawable/arror_right" />

</androidx.constraintlayout.widget.ConstraintLayout>